<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.medical.research.mapper.SysUserRoleMapper">

    <delete id="deleteByUserId">
        DELETE
        FROM sys_user_role
        WHERE user_id = #{userId}
    </delete>
    <select id="selectByUserId" resultType="com.medical.research.entity.SysUserRole">
        SELECT *
        FROM sys_user_role
        WHERE user_id = #{userId}
    </select>
    <select id="selectByRoleId" resultType="com.medical.research.entity.SysUserRole">
        SELECT *
        FROM sys_user_role
        WHERE role_id = #{roleId}
    </select>
</mapper>